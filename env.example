# Airtel Money API Configuration
# Copy this file to .env and fill in your actual values

# API Base URL (sandbox or production)
AIRTEL_API_BASE_URL=https://openapiuat.airtel.africa

# OAuth2 Credentials
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here
GRANT_TYPE=client_credentials

# Country and Currency Configuration
COUNTRY=UG
CURRENCY=UGX

# API Version (1 or 2)
AIRTEL_API_VERSION=1

# Polling and Retry Configuration
DEFAULT_MAX_RETRIES=5
DEFAULT_POLLING_INTERVAL_MS=5000
POLLING_TIMEOUT=30000 

# v2 Public key
RSA_PUBLIC_KEY=
